{
  "extends": ["airbnb"],
  "plugins": ["import"],
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "react/jsx-props-no-spreading": { "custom": "ignore" }, // disables prop spreading messages in src/components/link.jsx
    "react/prop-types": "off", // disables prop type messages
    "no-nested-ternary": "off", // disables nested ternary messages
    "no-console": "off",
    "import/order": [ // order used for imports
      "error",
      {
        "groups": ["builtin", "external", "internal"], // group types of imports
        // react import comes before anything
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["react"],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
